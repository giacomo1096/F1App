<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/icon_red"
                android:layout_marginTop="4sp"
                android:layout_marginLeft="4sp"
                android:layout_marginRight="4sp">
                <TextView
                    android:textColor="@color/white"
                    android:text="Team details"
                    android:textSize="20sp"
                    android:layout_marginLeft="4sp"
                    android:layout_marginTop="2sp"
                    android:layout_marginBottom="2sp"/>
            </TableRow>
            <TableRow>
                <GridLayout
                    android:id="@+id/teamInfoGrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:layout_marginLeft="5sp">
                    <TextView
                        android:text="Name: "
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:layout_gravity="fill"/>
                    <TextView
                        android:id="@+id/teamName"
                        android:textSize="16sp"
                        android:layout_column="1"
                        android:layout_row="0"
                        android:layout_gravity="fill"
                        android:textColor="@color/black"/>

                    <TextView
                        android:text="Nationality: "
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_column="0"
                        android:layout_row="1"
                        android:layout_gravity="fill"/>
                    <TextView
                        android:id="@+id/nationality"
                        android:textSize="16sp"
                        android:layout_column="1"
                        android:layout_row="1"
                        android:layout_gravity="fill"
                        android:textColor="@color/black"/>
                </GridLayout>
            </TableRow>
            <TableRow
                android:layout_marginTop="5sp">
                <TextView
                    android:text="Overview"
                    android:layout_gravity="fill"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="2dp"/>
            </TableRow>
            <TableRow>
                <GridLayout
                    android:id="@+id/careerResGrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:layout_marginLeft="5sp">

                    <TextView
                        android:text="Won championship: "
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:layout_gravity="fill"/>
                    <TextView
                        android:id="@+id/totChampWin"
                        android:textSize="16sp"
                        android:layout_column="1"
                        android:layout_row="0"
                        android:layout_gravity="fill"
                        android:textColor="@color/black"/>

                    <TextView
                        android:text="Won races: "
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_column="0"
                        android:layout_row="1"
                        android:layout_gravity="fill"/>
                    <TextView
                        android:id="@+id/totWinRace"
                        android:textSize="16sp"
                        android:layout_column="1"
                        android:layout_row="1"
                        android:layout_gravity="fill"
                        android:textColor="@color/black"/>
                </GridLayout>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/icon_red"
                android:layout_marginTop="4sp"
                android:layout_marginLeft="4sp"
                android:layout_marginRight="4sp">
                <TextView
                    android:textColor="@color/white"
                    android:text="Current season details"
                    android:textSize="20sp"
                    android:layout_marginLeft="4sp"
                    android:layout_marginTop="2sp"
                    android:layout_marginBottom="2sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Championship"
                    android:layout_gravity="fill"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="2dp"/>
            </TableRow>
            <TableRow>
                <GridLayout
                    android:id="@+id/currentGrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:layout_marginLeft="5sp">

                    <TextView
                        android:text="Position: "
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:layout_gravity="fill"/>
                    <TextView
                        android:id="@+id/position"
                        android:textSize="16sp"
                        android:layout_column="1"
                        android:layout_row="0"
                        android:layout_gravity="fill"
                        android:textColor="@color/black"/>

                    <TextView
                        android:text="Points: "
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_column="0"
                        android:layout_row="1"
                        android:layout_gravity="fill"/>
                    <TextView
                        android:id="@+id/points"
                        android:textSize="16sp"
                        android:layout_column="1"
                        android:layout_row="1"
                        android:layout_gravity="fill"
                        android:textColor="@color/black"/>

                    <TextView
                        android:text="Wins: "
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_column="0"
                        android:layout_row="2"
                        android:layout_gravity="fill"/>
                    <TextView
                        android:id="@+id/wins"
                        android:textSize="16sp"
                        android:layout_column="1"
                        android:layout_row="2"
                        android:layout_gravity="fill"
                        android:textColor="@color/black"/>
                </GridLayout>
            </TableRow>
            <TableRow
                android:layout_marginTop="5sp">
                <TextView
                    android:text="Drivers"
                    android:layout_gravity="fill"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="2dp"/>
            </TableRow>
            <TableRow>
                <GridLayout
                    android:id="@+id/currDriversGrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:layout_marginLeft="5sp">
                </GridLayout>
            </TableRow>
        </TableLayout>

    </ScrollView>

</FrameLayout>