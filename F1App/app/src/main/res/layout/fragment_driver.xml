<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/white">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/icon_red"
            android:layout_marginTop="4sp"
            android:layout_marginLeft="4sp"
            android:layout_marginRight="4sp">
            <TextView
                android:textColor="@color/white"
                android:text="Driver details"
                android:textSize="20sp"
                android:layout_marginLeft="4sp"
                android:layout_marginTop="2sp"
                android:layout_marginBottom="2sp"/>
        </TableRow>
        <TableRow>
            <GridLayout
                android:id="@+id/driverInfoGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginLeft="5sp">
                <TextView
                    android:text="Number: "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_gravity="fill"/>
                <TextView
                    android:id="@+id/numb"
                    android:textSize="16sp"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_gravity="fill"
                    android:textColor="@color/black"/>

                <TextView
                    android:text="Name: "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_gravity="fill"/>
                <TextView
                    android:id="@+id/name"
                    android:textSize="16sp"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:layout_gravity="fill"
                    android:textColor="@color/black"/>

                <TextView
                    android:text="Surname: "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:layout_gravity="fill"/>
                <TextView
                    android:id="@+id/surname"
                    android:textSize="16sp"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:layout_gravity="fill"
                    android:textColor="@color/black"/>

                <TextView
                    android:text="Date of birth: "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:layout_gravity="fill"/>
                <TextView
                    android:id="@+id/birth"
                    android:textSize="16sp"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:layout_gravity="fill"
                    android:textColor="@color/black"/>

                <TextView
                    android:text="Nationality: "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_column="0"
                    android:layout_row="4"
                    android:layout_gravity="fill"/>
                <TextView
                    android:id="@+id/nation"
                    android:textSize="16sp"
                    android:layout_column="1"
                    android:layout_row="4"
                    android:layout_gravity="fill"
                    android:textColor="@color/black"/>
            </GridLayout>
            <ImageView
                android:id="@+id/driver_img"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:scaleType="fitCenter"
                android:layout_marginRight="18sp"
                android:adjustViewBounds ="true"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="6sp">
            </ImageView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/icon_red"
            android:layout_marginTop="4sp"
            android:layout_marginLeft="4sp"
            android:layout_marginRight="4sp">
            <TextView
                android:textColor="@color/white"
                android:text="Career results"
                android:textSize="20sp"
                android:layout_marginLeft="4sp"
                android:layout_marginTop="2sp"
                android:layout_marginBottom="2sp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Current season"
                android:layout_gravity="fill"
                android:textSize="18sp"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="2dp"/>
        </TableRow>
        <TableRow>
            <GridLayout
                android:id="@+id/currentResGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginLeft="5sp">

                <TextView
                    android:text="Position: "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_gravity="fill"/>
                <TextView
                    android:id="@+id/position"
                    android:textSize="16sp"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_gravity="fill"
                    android:textColor="@color/black"/>

                <TextView
                    android:text="Points: "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_gravity="fill"/>
                <TextView
                    android:id="@+id/points"
                    android:textSize="16sp"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:layout_gravity="fill"
                    android:textColor="@color/black"/>

                <TextView
                    android:text="Team: "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:layout_gravity="fill"/>
                <TextView
                    android:id="@+id/team"
                    android:textSize="16sp"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:layout_gravity="fill"
                    android:textColor="@color/black"/>

                <TextView
                    android:text="Wins: "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:layout_gravity="fill"/>
                <TextView
                    android:id="@+id/wins"
                    android:textSize="16sp"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:layout_gravity="fill"
                    android:textColor="@color/black"/>
            </GridLayout>
        </TableRow>
        <TableRow
            android:layout_marginTop="5sp">
            <TextView
                android:text="Overview"
                android:layout_gravity="fill"
                android:textSize="18sp"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="2dp"/>
        </TableRow>
        <TableRow>
            <GridLayout
                android:id="@+id/careerResGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginLeft="5sp">
                <TextView
                    android:text="Pole positions: "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_gravity="fill"/>
                <TextView
                    android:id="@+id/polePosition"
                    android:textSize="16sp"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_gravity="fill"
                    android:textColor="@color/black"/>

                <TextView
                    android:text="Won races: "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_gravity="fill"/>
                <TextView
                    android:id="@+id/wonRaces"
                    android:textSize="16sp"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:layout_gravity="fill"
                    android:textColor="@color/black"/>

                <TextView
                    android:text="Won championship: "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:layout_gravity="fill"/>
                <TextView
                    android:id="@+id/wonChamp"
                    android:textSize="16sp"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:layout_gravity="fill"
                    android:textColor="@color/black"/>
            </GridLayout>
        </TableRow>
        <TableRow
            android:layout_marginTop="5sp">
            <TextView
                android:text="Past and current teams"
                android:layout_gravity="fill"
                android:textSize="18sp"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="2dp"/>
        </TableRow>
        <TableRow>
            <GridLayout
                android:id="@+id/teamsGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginLeft="5sp">
            </GridLayout>
        </TableRow>
    </TableLayout>
</FrameLayout>