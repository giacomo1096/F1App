<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/white">

    <TableLayout
        android:id="@+id/raceGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/icon_red">
            <TextView
                android:textColor="@color/white"
                android:text="Next Race"
                android:textSize="22sp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_marginTop="2dp"
                android:text="Race Info "
                android:layout_gravity="fill"
                android:textSize="20sp"
                android:layout_marginLeft="3sp"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <GridLayout
                android:id="@+id/nextRaceGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="3sp"
                >
                <TextView
                    android:layout_marginTop="2dp"
                    android:text="Race "
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/race_id"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:text="Race Date "
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/race_date"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:text="Race Time "
                    android:layout_column="0"
                    android:layout_row="2"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/race_time"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:text="Race Circuit "
                    android:layout_column="0"
                    android:layout_row="3"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/race_circuit"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:layout_gravity="fill" />
            </GridLayout>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_marginTop="2dp"
                android:text="Weather Info "
                android:layout_gravity="fill"
                android:textSize="20sp"
                android:layout_marginLeft="3sp"
                />

        </TableRow>
        <TableRow>
            <GridLayout
                android:id="@+id/weatherGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="3sp"
                >
                <TextView
                    android:layout_marginTop="2dp"
                    android:text="Weather "
                    android:layout_column="0"
                    android:layout_row="4"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/weather"
                    android:layout_column="1"
                    android:layout_row="4"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:text="Description "
                    android:layout_column="0"
                    android:layout_row="5"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/weather_description"
                    android:layout_column="1"
                    android:layout_row="5"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:text="Temperature  "
                    android:layout_column="0"
                    android:layout_row="6"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/weather_temperature"
                    android:layout_column="1"
                    android:layout_row="6"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:text="Visibility  "
                    android:layout_column="0"
                    android:layout_row="7"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/weather_visibility"
                    android:layout_column="1"
                    android:layout_row="7"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:text="Wind Speed  "
                    android:layout_column="0"
                    android:layout_row="8"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/weather_wind"
                    android:layout_column="1"
                    android:layout_row="8"
                    android:layout_gravity="fill" />
            </GridLayout>

            <ImageView
                android:id="@+id/weather_img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5sp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"></ImageView>
        </TableRow>


        <TableRow
            android:layout_marginTop="5sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/icon_red">
            <TextView
                android:textColor="@color/white"
                android:text="Last Race"
                android:textSize="22sp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_marginTop="2dp"
                android:text="Race Info "
                android:layout_gravity="fill"
                android:textSize="20sp"
                android:layout_marginLeft="3sp"
                />
        </TableRow>
        <TableRow>
            <GridLayout
                android:id="@+id/lastRaceGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="3sp"
                >
                <TextView
                    android:layout_marginTop="2dp"
                    android:text="Race "
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_gravity="fill"
                    />
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/last_race_id"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:text="Race Date "
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/last_race_date"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:text="Race Circuit "
                    android:layout_column="0"
                    android:layout_row="2"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/last_race_circuit"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:layout_gravity="fill" />
            </GridLayout>
        </TableRow>
        <TableRow>
            <GridLayout
                android:id="@+id/winnerGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="3sp"
                >
                <TextView
                    android:layout_marginTop="2dp"
                    android:text="Winner Info"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_gravity="fill"
                    android:textSize="20sp"
                    />
                <TextView
                    android:layout_marginTop="2dp"
                    android:text="Number "
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/winner_number"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:text="Name  "
                    android:layout_column="0"
                    android:layout_row="2"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/winner_name"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:text="Surname "
                    android:layout_column="0"
                    android:layout_row="3"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/winner_surname"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:text="Constructor "
                    android:layout_column="0"
                    android:layout_row="4"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/winner_constructor"
                    android:layout_column="1"
                    android:layout_row="4"
                    android:layout_gravity="fill" />
            </GridLayout>
        </TableRow>
        <TableRow>
            <GridLayout
                android:id="@+id/poleGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="3sp"
                >
                <TextView
                    android:layout_marginTop="2dp"
                    android:text="Pole Man Info"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_gravity="fill"
                    android:textSize="20sp"
                    />
                <TextView
                    android:layout_marginTop="2dp"
                    android:text="Number "
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/pole_number"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:text="Name  "
                    android:layout_column="0"
                    android:layout_row="2"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/pole_name"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:text="Surname "
                    android:layout_column="0"
                    android:layout_row="3"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/pole_surname"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:text="Constructor "
                    android:layout_column="0"
                    android:layout_row="4"
                    android:layout_gravity="fill" />
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/pole_constructor"
                    android:layout_column="1"
                    android:layout_row="4"
                    android:layout_gravity="fill" />
            </GridLayout>
        </TableRow>

    </TableLayout>



</FrameLayout>